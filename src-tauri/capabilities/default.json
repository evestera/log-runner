{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "opener:allow-default-urls",
    "shell:default",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": true,
          "sidecar": false
        },
        {
          "name": "exec-zsh",
          "cmd": "zsh",
          "args": true,
          "sidecar": false
        }
      ]
    },
    "process:default",
    "opener:default"
  ]
}